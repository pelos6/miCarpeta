create table ESTADOS_PETVA
(
  C_ESTADO_PETVA VARCHAR2(1) not null,
  D_ESTADO_PETVA VARCHAR2(210) not null
)
;
comment on table ESTADOS_PETVA
  is ' Estados posibles de una petición de vacante concreta. ';
comment on column ESTADOS_PETVA.C_ESTADO_PETVA
  is ' Código del estado de la petición de vacante. ';
comment on column ESTADOS_PETVA.D_ESTADO_PETVA
  is ' Descripción del estado de la petición de vacante. ';
alter table ESTADOS_PETVA
  add constraint PK_ESTADOS_PETVA primary key (C_ESTADO_PETVA);

