create table CLIPRI_PARTICIPANTE
(
  DNI         VARCHAR2(15) not null,
  TIPO_ID     VARCHAR2(1) not null,
  FECHA_NACIM DATE not null,
  NOMBRE      VARCHAR2(14),
  APELLIDO1   VARCHAR2(22),
  APELLIDO2   VARCHAR2(22)
)
;
comment on table CLIPRI_PARTICIPANTE
  is ' Persona que esta preseleccionada ';
comment on column CLIPRI_PARTICIPANTE.DNI
  is ' DNI del participante ';
comment on column CLIPRI_PARTICIPANTE.TIPO_ID
  is ' Tipo de identificador del participante ';
comment on column CLIPRI_PARTICIPANTE.FECHA_NACIM
  is ' Fecha de nacimiento del participante ';
comment on column CLIPRI_PARTICIPANTE.NOMBRE
  is ' Nombre del participante ';
comment on column CLIPRI_PARTICIPANTE.APELLIDO1
  is ' Primer apellido del participante ';
comment on column CLIPRI_PARTICIPANTE.APELLIDO2
  is ' Segundo apellido del participante ';
alter table CLIPRI_PARTICIPANTE
  add constraint PK_CLIPRI_PARTICIPANTE primary key (DNI, TIPO_ID);
alter table CLIPRI_PARTICIPANTE
  add constraint CK_TIPO_ID1
  check (TIPO_ID IN ('D','R','P'));

