create table WCT_FUNCIONES
(
  CFUNC_SIGP VARCHAR2(3) not null,
  CFUNC_CT   VARCHAR2(3) not null,
  DFUNC      VARCHAR2(80),
  ORDEN      NUMBER(3),
  CCAA       VARCHAR2(2),
  INPS       VARCHAR2(1)
)
;
comment on table WCT_FUNCIONES
  is 'Relaciona Codigos de Funcion de SIGP con Codigos de funcion de C.T.';
comment on column WCT_FUNCIONES.CFUNC_SIGP
  is 'Codigo de funcion en SIGP';
comment on column WCT_FUNCIONES.CFUNC_CT
  is 'Codigo de funcion en C.T.';
comment on column WCT_FUNCIONES.DFUNC
  is 'Descripcion de funcion en SIGP';
comment on column WCT_FUNCIONES.ORDEN
  is 'Número de orden de publicación';
comment on column WCT_FUNCIONES.CCAA
  is 'Codigo de C.A. cuando es la funcion es exclusiva de la comunidad';
comment on column WCT_FUNCIONES.INPS
  is 'Indicador si el centro es de Primaria - P / Secundaria - S / Adultos - A ';
alter table WCT_FUNCIONES
  add constraint PK_WCT_FUNCIONES primary key (CFUNC_SIGP, CFUNC_CT);
alter table WCT_FUNCIONES
  add constraint CK_WCT_FUNCIONES
  check (inps in ('P','S','A'));

